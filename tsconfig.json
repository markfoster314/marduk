{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",

    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "outDir": "./dist/esm",
    "declarationDir": "./dist/esm",

    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "importHelpers": false, // we want zero dependencies, this adds tslib if true, small increase in bundle size
    "noEmit": true,
    "noEmitOnError": true,

    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "skipLibCheck": true,

    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "coverage",
    "storybook-static"
  ]
}
